<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-5" id="myDiv">
        <h3>Enter Walls Details Here</h3>
        <form  action="~/Home/Calculate" method="post">
                <input type="number" min="0" name="WallHeigth" placeholder ="Wall Height In Feet" style="width:70%" required/>
                <br /><br />
                <input type="number" min="0" name="WallLength"  placeholder="Wall Length In feet" style="width:70%" required />
                <br /><br />
                <input type="number" min="4.5" step="4.5" max="9" name="Wallthickness"  placeholder="Wall thickness In Inches" style="width:70%" required />
                <br /><br />
                <select name="ratio" style="width:30%" >
                <option value="7">cement sand ratio</option>
                <option value="4">1:3</option>
                <option value="5">1:4</option>
                <option value="6">1:5</option>
                <option value="7">1:6</option>
                <option value="8">1:7</option>
                </select>
                <input type="submit" class="btn btn-success" style="width:30%" value="submit"/>
            </form>
            <b id="dv" style="color:blue;"></b>
    </div>
    <div class="col-md-5">
        <h3>Enter Roof Details Here</h3>
        <form  action="~/Home/CalculateConcrete" method="post">
            <input type="number" min="0" name="WallHeigth" placeholder ="Roof Height In Feet" style="width:70%" required/>
                <br /><br />
                <input type="number" min="0" name="WallLength"  placeholder="Roof Length In feet" style="width:70%" required />
                <br /><br />
                <input type="number" min="4" step="2" max="6" name="Wallthickness"  placeholder="Roof thickness In Inches" style="width:70%" required />
                <br /><br />
                <input type="submit" class="btn btn-success" style="width:30%" value="submit"/>
            </form>
    </div>
</div>
